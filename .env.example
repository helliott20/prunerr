# ============================================
# Prunerr - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Do NOT commit .env to version control!

# ============================================
# Application Settings
# ============================================

# Environment: development, production, test
NODE_ENV=production

# Server port
PORT=3000

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Data directory for SQLite database
DATA_DIR=/app/data

# Database file path (within DATA_DIR)
DB_PATH=/app/data/prunerr.db

# ============================================
# Plex Configuration (Required)
# ============================================

# URL to your Plex Media Server
# Examples: http://192.168.1.100:32400, http://plex:32400
PLEX_URL=http://localhost:32400

# Plex authentication token
# How to find: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
PLEX_TOKEN=your_plex_token_here

# ============================================
# Sonarr Configuration (Optional)
# ============================================

# URL to your Sonarr instance
# Examples: http://192.168.1.100:8989, http://sonarr:8989
# Leave empty to disable Sonarr integration
SONARR_URL=http://localhost:8989

# Sonarr API key
# Found in Sonarr: Settings > General > Security > API Key
SONARR_API_KEY=your_sonarr_api_key_here

# ============================================
# Radarr Configuration (Optional)
# ============================================

# URL to your Radarr instance
# Examples: http://192.168.1.100:7878, http://radarr:7878
# Leave empty to disable Radarr integration
RADARR_URL=http://localhost:7878

# Radarr API key
# Found in Radarr: Settings > General > Security > API Key
RADARR_API_KEY=your_radarr_api_key_here

# ============================================
# Tautulli Configuration (Optional)
# ============================================

# URL to your Tautulli instance
# Examples: http://192.168.1.100:8181, http://tautulli:8181
# Leave empty to disable Tautulli integration
TAUTULLI_URL=http://localhost:8181

# Tautulli API key
# Found in Tautulli: Settings > Web Interface > API Key
TAUTULLI_API_KEY=your_tautulli_api_key_here

# ============================================
# Email Notifications (Optional)
# ============================================

# SMTP server hostname
# Examples: smtp.gmail.com, smtp.sendgrid.net
# Leave empty to disable email notifications
SMTP_HOST=

# SMTP server port
# Common ports: 587 (TLS), 465 (SSL), 25 (unencrypted)
SMTP_PORT=587

# SMTP authentication username
SMTP_USER=

# SMTP authentication password
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_PASS=

# Email address to send notifications from
SMTP_FROM=prunerr@example.com

# Email address to receive notifications
NOTIFICATION_EMAIL=admin@example.com

# ============================================
# Advanced Settings
# ============================================

# Cron schedule for automatic scans (default: daily at 3 AM)
# Format: standard cron expression
# SCAN_CRON=0 3 * * *

# Number of days without watch to consider media stale
# STALE_DAYS=90

# Dry run mode - log actions without executing them
# DRY_RUN=false

# Enable debug mode for verbose API logging
# DEBUG=false
